    <body>
        <div1></div1>

        <script src="app.js"></script>
        <div class="center">
            <h1>Login</h1>
            <form method="post">
                <div class="txt_field">
                    <input title="Please fillout this field." type="email" required>
                    <span>   <br></span>
                    <label>Email</label>
                </div>
                <div class="txt_field">

                    <input title="Please fillout this field." type="password" required id="password_input">
                    <span></span>
                    <label>Password</label>
                </div>
                <input title="Toggle password visibility." type="checkbox" onclick="hidePass()"
                       style="position: relative;
                margin-left: 273px;
                height: 40px;
                transform: translateY(-175%);">
                <div title="Reset your password." class="singup_link">
                    <a href="forgetPass.html">Forgot Password?</a>
                </div>
                <form action="anotherPageLink.html">
                    <input type="submit" value="Login">
                </form>

                <div class="singup_link">
                    Don't have an account?
                    <a href="signup.html">Sign up</a>

                </div>
            </form>
        </div>
    </body>
    </html>